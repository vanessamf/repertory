.calendar-plugin-wrapper{
   position: absolute;
  width:100%;
   height:100%;
   background:rgba(0,0,0,0.6);
 z-index:9998;
}
calendar{
  position: absolute;
 left:50%;
 top:20%;
 transform: translate(-50%,0);
 width:80%;
 z-index:9999;
}
.calendar {
    background-color:white; 
    padding-top: 10px;      
    border-radius: 15px;
}
/* 采购单 */
.sel-item{
  height:90rpx;
  line-height: 90rpx;
  display: flex;
  justify-content: space-between;
  padding:0 25rpx;
  color:#333;
  font-size:34rpx;
}
.sel-item .item-right{
  font-size:28rpx;
}
.sel-item .item-right .iconfont{
  font-size:28rpx;
}
.PODetail-wrapper{
  height:calc(100% - 120rpx);
}
.add-order-footer{
  box-sizing:border-box;
  position: fixed;
  bottom:0;
  padding:0 25rpx;
  width:100%;
  height:120rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background:#fff;
}
.add-order-footer.detail-footer{
  justify-content: center;
}
.add-order-footer .btn-left{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.add-order-footer .btn-primary{
  margin-right:30rpx;
}
.add-order-footer.detail-footer .btn-primary{
  margin-right:70rpx;
}
.btn-primary{
  color:#fff;
  background-color:#16c4bb;
  border:none;
}
.btn-default{
  color:#333;
  background-color:#e5e5e5;
  border:none;
}
.btn-submit{
  color:#fff;
  background-color:#ed5959;
  border:none;
}
.sm-btn{
  padding:0;
  width:100rpx;
  height:66rpx;
  line-height:66rpx;
  border-radius:10rpx;
  font-size:30rpx;
}
.md-btn{
  padding:0;
  width:150rpx;
  height:66rpx;
  line-height:66rpx;
  font-size:30rpx;
}
.lg-btn{
  padding:0;
  width:200rpx;
  height:66rpx;
  line-height:66rpx;
  font-size:30rpx;
}
