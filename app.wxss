/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.main-container{
  height: 100%;
}
.mb-10{
  margin-bottom:10rpx;
}
page{
  color:#333;
}
.primary-color{
  color:#16c4bb !important;
}
.default-color{
  color:#e5e5e5 !important;
}
.grey-color{
  color:#999999 !important;
}
.submit-color{
  color:#ed5959 !important;
}
switch{
  zoom:.7;
}
