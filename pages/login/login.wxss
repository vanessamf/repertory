/* pages/login/login.wxss */
.logo-wrapper{
  height:300rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.logo-wrapper .logo-pic{
  width:150rpx;
  height:150rpx;
}
.logo-wrapper .logo-text{
  margin-top:28rpx;
  width:130rpx;
  height:64rpx;
}
.login-form{
  padding:0 55rpx;
  width:100%;
  box-sizing: border-box;
}
.form-input-wrapper{
  display: flex;
  align-items: flex-end;
  position: relative;
  width:100%;
  height: 108rpx;
  font-size: 30rpx;
  border-bottom:1rpx solid #ccc;
  box-sizing: border-box;
}
.form-input-wrapper .iconfont{
  position: absolute;
  bottom:16rpx;
  font-size: 36rpx;
  color:#666;
}
.form-input-wrapper input{
  /* position: absolute; */
  bottom: 0;
  width:100%;
  height: 70rpx;
  line-height:500rpx;
  padding:0 145rpx 0 45rpx;
}

.form-input-wrapper text{
   position: absolute;
   right:0;
   bottom:16rpx;
   color:#16c4bb;
}
.login-btn{
  margin-top:96rpx;
  height:74rpx;
  line-height: 74rpx;
  text-align: center;
  font-size:36rpx;
  font-weight: 300;
   background: #16c4bb;
   color:#fff;
   border-radius: 6rpx;
}